@model IEnumerable<CheckPoint.Models.ReviewModel.ReviewListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
    <table class="table table-striped table-hover">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.ReviewId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.GameTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StarRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedUtc)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.ReviewId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.GameTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StarRating)
        </td>
        <td>
            @{
                string createdUtc = item.CreatedUtc.ToString("d");
            }
            @Html.DisplayFor(modelItem => createdUtc)
        </td>
        <td class="btn-group">
            <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ReviewId })
                </li>
                <li>
                    @Html.ActionLink("Details", "Details", new { id = item.ReviewId })
                </li>
                <li>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ReviewId })
                </li>
            </ul>
        </td>
    </tr>
        }

    </table>
