@model IEnumerable<CheckPoint.Models.GameModels.GameListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Games Library</h2>

<p class="Create">
    @Html.ActionLink("Create New", "Create")

</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        @*<th>*@
            <!--@Html.DisplayNameFor(model => model.Description)
        </th>-->
        <th>
            @Html.DisplayNameFor(model => model.ESRB)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.PlatTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Developer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.GameImage)
                </td>*@
            <td style="font-size: large">
                @Html.DisplayFor(modelItem => item.GameId)
            </td>
            <td style="font-size: large">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>*@
            <td style="font-size: large">
                @Html.DisplayFor(modelItem => item.ESRB)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.PlatTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Developer)
            </td>
            <td>
                @{
                    string releaseDate = item.ReleaseDate.ToString("d");
                }
                @Html.DisplayFor(modelItem => releaseDate)
            </td>*@
            <td class="btn-group" style="border: 0 !important; margin-top: .5em;">
                <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                <ul class="dropdown-menu" >
                    <li>
                        @Html.ActionLink("Edit", "Edit", new { id = item.GameId }) 
                    </li>
                    <li>
                        @Html.ActionLink("Details", "Details", new { id = item.GameId }) 
                    </li>
                    <li>
                        @Html.ActionLink("Delete", "Delete", new { id = item.GameId })
                    </li>
                </ul>
            </td>

        </tr>
    }

</table>

