@model IEnumerable<CheckPoint.Models.GameModels.GameListItem>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-shadow: 2px 2px 2px #000000 !important;">Games Library</h2>


<p class="Create" style="text-shadow: 2px 2px 2px #000000 !important;">
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table table-striped table-hover" style="text-shadow: 2px 2px 2px #000000 !important;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameImage)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.GameId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        @*<th>*@
        <!--@Html.DisplayNameFor(model => model.Description)
        </th>-->
        <th>
            @Html.DisplayNameFor(model => model.ESRB)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.PlatTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Developer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@if (item.GameImage != null)
                { }*@
                    <img src="/Game/RetrieveImage/@item.GameId" alt="" height=250 width=200 />
                
                @*else if (item.GameImage == null)
                {
                    <img src="~/Assets/image-placeholder.jpg" alt="" height=250 width=200 />
                }*@
            </td>
            @*<td style="font-size: large">
                @Html.DisplayFor(modelItem => item.GameId)
            </td>*@
            <td style="font-size: large">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
            <td style="font-size: large">
                @Html.DisplayFor(modelItem => item.ESRB)
            </td>
            
            @*<td>
                    @Html.DisplayFor(modelItem => item.PlatTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Developer)
                </td>
                <td>
                    @{
                        string releaseDate = item.ReleaseDate.ToString("d");
                    }
                    @Html.DisplayFor(modelItem => releaseDate)
                </td>*@

           
            <td class="btn-group" style="border: 0 !important; margin-top: .5em;">
                <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink("Edit", "Edit", new { id = item.GameId })
                    </li>
                    <li>
                        @Html.ActionLink("Details", "Details", new { id = item.GameId })
                    </li>
                    <li>
                        @Html.ActionLink("Delete", "Delete", new { id = item.GameId })
                    </li>
                </ul>
                @*<div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-success" id="btnAddImages">Add Images</button>
                        @Html.ActionLink("Add Image", "Create_Image", new { id = item.GameId})
                    </div>
                </div>*@
            </td>
            
        </tr>
    }
</table>
